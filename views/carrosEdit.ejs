<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header w-100 m-0">
            <h1>Alterar carro</h1>
            <hr>
            <form method="POST" action="/carros/update/<%= carro.id %>">
                <label>Nome do carro:</label>
                <input type="text" name="nome" id="nome" value="<%= carro.nome %>" class="form-control" required>
                                
                <label>Modelo do carro:</label>
                <input type="text" name="modelo" id="modelo" value="<%= carro.modelo %>" class="form-control" required>
                
                <label>Marca do carro:</label>
                <input type="text" name="marca" id="marca" value="<%= carro.marca %>" class="form-control" required>

                <label>Preço do carro:</label>
                <input type="text" name="preco" id="preco" value="<%= carro.preco %>" class="form-control" required>
                <br>
                <input type="hidden" name="id" value="<%= carro.id %>">
                <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações realizadas para o carro <%= carro.nome %>?')">
            </form>
            <hr>
        </div>
    </div>
</div>
<br>
<%- include ('partials/footer.ejs') %>